@model IEnumerable<TourManagement.Core.DbContext.Hotel>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <div class="card h-75">
                <img src="../../Content/images/hotels/@item.Image" class="card-img-top img-thumbnail h-50" alt="@item.Name">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h5 class="card-title">@item.Name</h5>
                    <a href="/Hotels/Details/@item.HotelID" class="btn btn-primary w-50">View More</a>
                </div>
            </div>
        </div>
    }
</div>